<%name ||= "Crear"%>

<h1><%=name%> Articulo</h1>
<%= form_for(@article) do |formulario| %>

  <% @article.errors.full_messages.each do |message| %>
    <div class="be-red white top-space">
      *<%= message %>
    </div>
  <% end %>

  <div class="" field>
    <%= formulario.text_field :title, placeholder: "Titulo", class: "form-control" %>
  </div>

  <div class="field">
    Portada: <%= formulario.file_field :cover %>
  </div>

  <div class="field">
    <label>Categoria:</label>
    <%@categories.each do |category| %>
      <div class="field">
        <%=check_box_tag "categories[]", category.id %> <%=category.name%>
      </div>
    <%end%>

  </div>

  <div class="field">
    <%= formulario.text_area :body, placeholder: "Escribe aqui el articulo", style: "height:250px;", class: "form-control" %>
  </div>

  <div class="field">
    <%= formulario.submit "Guardar", class: "btn be-red white" %>
  </div>

<% end %>